<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.alfaintegral.deviceProduction.controllers.ProfileSceneController">
   <stylesheets>
      <URL value="@styles.css" />
   </stylesheets>
   <children>
      <!-- Top Bar -->
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="800.0" styleClass="top-bar" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label fx:id="usernameLabel" styleClass="username-label" text="Username" />
         </children>
         <padding>
            <Insets left="10" right="10" />
         </padding>
      </HBox>

      <!-- Side Menu -->
      <VBox fx:id="sidePanel" alignment="TOP_CENTER" prefWidth="60.0" styleClass="side-menu" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="50.0">
         <children>
            <Button fx:id="homeButton" prefHeight="39.0" prefWidth="37.0" styleClass="menu-button" text="🏠" />
            <!-- Add more buttons as needed -->
         </children>
      </VBox>

      <!-- Profile and Details Section -->
      <VBox spacing="20.0" styleClass="main-content" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="60.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="50.0">
         <HBox>
            <children>
               <ImageView fx:id="avatarImageView" fitHeight="166.0" fitWidth="166.0" pickOnBounds="true" preserveRatio="true">
                  <HBox.margin>
                     <Insets right="10.0" />
                  </HBox.margin>
               </ImageView>
               <!-- Details Section -->
               <VBox alignment="TOP_LEFT" prefWidth="500.0" spacing="10.0" styleClass="details-section">
                  <children>
                     <Label styleClass="label-title" text="Имя" />
                     <Label fx:id="nameLabel" styleClass="label-content" />
                     <Label styleClass="label-title" text="Фамилия" />
                     <Label fx:id="surnameLabel" styleClass="label-content" />
                     <Label styleClass="label-title" text="Отчество" />
                     <Label fx:id="middleNameLabel" styleClass="label-content" />
                     <Label styleClass="label-title" text="Email" />
                     <Label fx:id="mailLabel" styleClass="label-content" />
                  </children>
               </VBox>
            </children>
         </HBox>
      </VBox>
   </children>
</AnchorPane>
