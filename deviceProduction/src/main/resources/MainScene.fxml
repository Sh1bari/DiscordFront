<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.alfaintegral.deviceProduction.controllers.MainSceneController">
    <children>
        <BorderPane prefHeight="448.0" prefWidth="624.0">
            <!-- Top Section -->
            <top>
                <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-background-color: #a3d4ff;" BorderPane.alignment="CENTER_RIGHT">
                    <children>
                        <StackPane prefHeight="40.0" prefWidth="46.0">
                            <children>
                                <ProgressIndicator fx:id="avatarLoadingIndicator" visible="false" />
                                <ImageView fx:id="avatarImageView" fitHeight="40.0" fitWidth="44.0" />
                            </children>
                        </StackPane>
                        <Label fx:id="usernameLabel" text="Username" />
                    </children>
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>
                </HBox>
            </top>
            <!-- Left Section -->
            <left>
                <HBox>
                    <children>
                        <VBox fx:id="sidePanel" prefHeight="388.0" prefWidth="112.0" spacing="10.0">
                            <children>
                                <Button text="Section 1" />
                                <Button text="Section 2" />
                                <Button text="Section 3" />
                                <Button text="Section 4" />
                                <Region VBox.vgrow="ALWAYS" />
                                <Button fx:id="logoutButton" text="Logout" />
                            </children>
                            <padding>
                                <Insets bottom="10" left="10" right="10" top="10" />
                            </padding>
                        </VBox>
                        <Separator orientation="VERTICAL" prefHeight="200.0" />
                    </children>
                </HBox>
            </left>
            <center>
                <Text text="Main content goes here" BorderPane.alignment="CENTER" />
            </center>
        </BorderPane>
    </children>
</AnchorPane>
